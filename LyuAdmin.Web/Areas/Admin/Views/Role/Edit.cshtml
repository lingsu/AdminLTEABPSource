@model RoleDto
<!--html代码区域-->
<div class="page-content">
    <form id="myform" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="container form-horizontal padding-top-30">
            <!--<div class="alert alert-info fs16 bold mt10">分节标题</div>-->
            <div class="clearfix">
                <div class="form-group">
                    <label class="col-sm-2 control-label">string：<span class="asterisk">*</span></label>
                    <div class="col-sm-10">
                        <textarea class="form-control input-xxlarge required" rows="4" id="DisplayName" name="DisplayName">@Model.DisplayName</textarea>
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">bool：</label>
                    <div class="col-sm-10">
                        <label style="line-height:25px;"><input class="ace" type="checkbox" id="IsStatic" name="IsStatic" value="1" @(Model.IsStatic ? "checked" : "") /><span class="lbl">是</span></label>
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">bool：</label>
                    <div class="col-sm-10">
                        <label style="line-height:25px;"><input class="ace" type="checkbox" id="IsDefault" name="IsDefault" value="1" @(Model.IsDefault ? "checked" : "") /><span class="lbl">是</span></label>
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">string：<span class="asterisk">*</span></label>
                    <div class="col-sm-10">
                        <textarea class="form-control input-xxlarge required" rows="4" id="Name" name="Name">@Model.Name</textarea>
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">bool：</label>
                    <div class="col-sm-10">
                        <label style="line-height:25px;"><input class="ace" type="checkbox" id="IsDeleted" name="IsDeleted" value="1" @(Model.IsDeleted ? "checked" : "") /><span class="lbl">是</span></label>
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">DateTime：</label>
                    <div class="col-sm-10">
                        <input class="form-control date-picker inline w300 date-picker" type="text" id="CreationTime" name="CreationTime" value="@Model.CreationTime.ToShortString()" />
                        <span class="help-inline"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="wx-form-footer fixed">
            <button id="btn-save" type="submit" class="btn btn-primary btn-lg w100">保存</button>
            <button id="btn-cancel" type="button" class="btn btn-default btn-lg w100">取消</button>
        </div>
    </form>
</div>

@section js{
    <!--模块js-->
    @Scripts.Render("~/js/form")
    <script>
        //调用表单验证
        abp.form.submit("#myform", {
            url: abp.appPath + 'api/services/Roles/Role/CreateOrUpdateRole',
        }, {
            rules: { 
            },
        });
    </script>
}

